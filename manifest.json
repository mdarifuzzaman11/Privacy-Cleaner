{
  "manifest_version": 3,
  "name": "One Click Privacy Cleaner",
  "description": "One-click solution to clear your browsing data.",
  "version": "1.2",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "browsingData",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "clear-browsing-data": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Clear browsing data via Shortcuts"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}